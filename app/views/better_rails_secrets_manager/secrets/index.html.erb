<div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
  <!-- Sidebar -->
  <div class="lg:col-span-1">
    <div class="bg-white rounded-lg card-shadow p-6">
      <h2 class="text-lg font-semibold mb-4">Environments</h2>
      
      <div class="space-y-2 mb-4">
        <% @environments.each do |env| %>
          <div class="flex justify-between items-center">
            <%= link_to env.capitalize, 
                switch_environment_path(environment: env),
                class: "flex-1 px-3 py-2 rounded #{current_environment == env ? 'bg-indigo-600 text-white' : 'bg-gray-100 hover:bg-gray-200'}" %>
            
            <% unless %w[development test staging production].include?(env) %>
              <%= link_to "Ã—", 
                  remove_environment_path(environment: env),
                  method: :delete,
                  data: { confirm: "Are you sure you want to remove #{env} environment?" },
                  class: "ml-2 text-red-500 hover:text-red-700 text-xl" %>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <div class="border-t pt-4">
        <%= form_with url: add_environment_path, local: true, class: "space-y-2" do |f| %>
          <%= f.text_field :environment_name, 
              placeholder: "New environment", 
              class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          <%= f.submit "Add Environment", class: "btn-primary w-full" %>
        <% end %>
      </div>
    </div>
    
    <!-- Import/Export -->
    <div class="bg-white rounded-lg card-shadow p-6 mt-6">
      <h3 class="text-lg font-semibold mb-4">Import/Export</h3>
      
      <%= form_with url: export_path, local: true do |f| %>
        <%= f.submit "Export #{current_environment.capitalize}", class: "btn-secondary w-full mb-3" %>
      <% end %>
      
      <%= form_with url: import_path, local: true, multipart: true do |f| %>
        <%= f.file_field :import_file, 
            accept: ".json",
            class: "w-full mb-2 text-sm" %>
        <%= f.submit "Import to #{current_environment.capitalize}", class: "btn-primary w-full" %>
      <% end %>
    </div>
  </div>
  
  <!-- Main Content -->
  <div class="lg:col-span-3">
    <div class="bg-white rounded-lg card-shadow p-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold">
          <%= current_environment.capitalize %> Secrets
        </h2>
        <%= link_to "Edit Secrets", edit_path, class: "btn-primary" %>
      </div>
      
      <% if @current_secrets.empty? %>
        <div class="text-center py-12 text-gray-500">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium">No secrets configured</h3>
          <p class="mt-1 text-sm">Get started by adding your first secret.</p>
          <div class="mt-6">
            <%= link_to "Add Secrets", edit_path, class: "btn-primary" %>
          </div>
        </div>
      <% else %>
        <div class="overflow-hidden">
          <div class="secrets-tree">
            <%= render_secrets_tree(@current_secrets) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .secrets-tree {
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
  }
  .secret-key {
    color: #0969da;
    font-weight: 600;
  }
  .secret-value {
    color: #1f2328;
  }
  .secret-nested {
    margin-left: 20px;
    padding-left: 20px;
    border-left: 1px solid #d1d9e0;
  }
</style>